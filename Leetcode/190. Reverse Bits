Example 2:

Input: n = 2147483644
Output: 1073741822
--------------------------------

class Solution {
    public int reverseBits(int n) {
        int bit=32;
        int ans=0;
        while(bit>0){
            // ans=ans<<1;
            if((n&1)>0) ans= (ans | 1);
            n=n>>1;
            ans= (bit>1) ? ans<<1: ans;
            bit--;
        }
        return ans;
    }
}
