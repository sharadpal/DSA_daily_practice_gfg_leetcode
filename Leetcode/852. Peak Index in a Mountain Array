Example 1:

Input: arr = [0,1,0]
Output: 1
--------------------------

class Solution {
    public int peakIndexInMountainArray(int[] arr) {
        int val=arr[0];
        for(int i=1;i<arr.length;i++){
            if(arr[i]>val){
                val=arr[i];
            }else{
                return i-1;
            }
        }
        return -1;
    }
}
